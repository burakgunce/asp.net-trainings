@model User
@{
    ViewData["Title"] = "HtmlHelpers";
}

<div class="row justify-content-center" style="margin-top:50px;">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3>HTML HELPER SAYFASI</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("HtmlHelpers", "User", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="UserName">Kullanıcı Adı :</label>
                        <input type="text" class="form-control" name="UserName">
                        <!--alttakı de yukarıdakıyle aynı ıslevı goruyo-->
                        @Html.TextBoxFor(u => u.FirstName, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="Password">PArola :</label>
                        <input type="text" class="form-control" name="Password">
                        <!--alttakı de yukarıdakıyle aynı ıslevı goruyo-->
                        @Html.TextBoxFor(u => u.Password, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="Password">Checkbox</label>
                        @Html.CheckBox("Beni Hatırla", true, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>

                    <div>
                        @Html.ActionLink("Şifremi unuttum","ForgetPasswprd","Password")
                    </div>
                    

                }
                <!--hangı actıon hangı controller hangı actıon turu-->
            </div>
            <div class="card-footer">
                <h5>&copy;</h5>
            </div>

        </div>
    </div>
</div>